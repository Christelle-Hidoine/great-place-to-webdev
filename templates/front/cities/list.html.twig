        <div class="flex w-full justify-center">
            <div class="w-screen md:grid md:grid-cols-3 md:justify-center md:items-center my-4 mx-4 lg:mx-10 p-4 gap-x-2 gap-y-4">
            
                {% for city in cities %}

                        {% include 'partials/_cities_list.html.twig' %}

                {% else %}
                
