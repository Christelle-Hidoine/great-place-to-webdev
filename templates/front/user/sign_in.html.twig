{% extends 'base.html.twig' %}

{% block title %}Inscription utilisateur{% endblock %}

{% block body %}

    <div class="relative w-full h-48" style="background-image: url('{{ asset('images/inscription.png') }}')">
        <div class="w-auto h-24 flex justify-center items-center backdrop-brightness-50">
            <span class="text-xl text-white font-bold w-auto flex flex-col justify-center items-center backdrop-brightness-25">
                <h2 class="text-2xl mt-4 font-bold w-fit">
                    Inscription
                </h2>
            </span>
        </div>
    </div>
    <div class="flex justify-center"> 
        <div class="flex justify-center bg-slate-100 w-screen md:w-1/2">
            <div class="flex justify-center bg-white shadow-md rounded md:px-3 lg:px-8 pt-6 pb-8 my-10 w-full lg:w-3/5">
                <div class="w-3/4">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }}
                        <button role="button" type="submit" class="w-full text-white bg-cyan-900 hover:bg-sky-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-base px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">{{ button_label|default('Sauvegarder') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}