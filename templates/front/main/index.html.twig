{% extends 'base.html.twig' %}

{% block title %}New O'rizon Page d'accueil
{% endblock %}

{% block body %}


	{# mobile version #}
	<div id="home_map_mobile" class="w-full flex flex-col lg:hidden mb-5">

		{# Logo #}
		<div class="mt-5 mb-3 ml-3 lg:hidden flex justify-start">
			<img class="w-2/5" src="{{asset('images/logo_image.png')}}" alt="Logo du site New O'rizon représentant un globe terrestre transparent aux contours bleus">
		</div>

		{# Text of presentation #}
		<div class="presentation mb-2 pb-4 mx-auto lg:hidden">
			<span class="italic font-medium text-cyan-900 text-start">
				<p class="text-2xl font-bold leading-tight">Avec New O'Rizon</p>
				<p class="text-xl leading-tight">Trouvez votre lieu de travail</p>
				<p class="text-base leading-tight">Depuis votre canapé...</p>
			</span>
		</div>

		{# Search bar #}
		<div class="search flex justify-center lg:hidden mt-6 w-full mx-auto">
			<div class="bg-cyan-900 p-1 w-fit rounded-lg">
				<div class="flex mx-2 justify-between items-center">

					{# Filter button #}
					<button id="filter_btn_mobile" aria-label="Ouvrir" type="button">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24"><path fill="none" stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 1 0 0 4m0-4a2 2 0 1 1 0 4m-6 8a2 2 0 1 0 0-4m0 4a2 2 0 1 1 0-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 1 0 0-4m0 4a2 2 0 1 1 0-4m0 4v2m0-6V4"/></svg>
					</button>

					{# Cities Search Form#}
					<form class="justify-between" action="{{ path('app_front_city_search')}}">
						<div class="flex flex-row justify-between">
							<input class="bg-gray-100 outline-none rounded-xl border border-solid mr-2" type="text" name="search" placeholder="Recherche par ville"/>
							<button type="submit" id="loupe">
								<i class="fa fa-search text-lg text-white" aria-hidden="false"></i>
							</button>
						</div>
					</form>

				</div>
			</div>

		</div>

		{# carousel #}
		{{ include ('partials/_slide_buttons.html.twig') }}

	</div>

	{# desktop version #}
	<div id="home_map_desktop" class="hidden mt-4 lg:block">
		
		{# world map #}
    	<div class="relative h-screen w-full grid">

        	{% include "partials/_map_homepage.html.twig" %}

			{# Search bar #}
            <div class="absolute my-3 top-8 left-8 mb-3">
				<div class="flex bg-cyan-900 w-80 space-x-4 rounded-xl justify-center">
					<div class="flex mx-2 space-x-4 justify-center">

						{# Filter button #}
						<button id="filter_btn" aria-label="Ouvrir" type="button">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24"><path fill="none" stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 1 0 0 4m0-4a2 2 0 1 1 0 4m-6 8a2 2 0 1 0 0-4m0 4a2 2 0 1 1 0-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 1 0 0-4m0 4a2 2 0 1 1 0-4m0 4v2m0-6V4"/></svg>
						</button>

						{# Cities Search Form#}
						<form class="justify-between" action="{{ path('app_front_city_search')}}">
							<input class="bg-gray-100 outline-none rounded-xl border border-solid my-1" type="text" name="search" placeholder="Recherche par ville"/>
							<button type="submit" id="loupe">
								<i class="fa fa-search text-xl text-white" aria-hidden="false"></i>
							</button>
						</form>

					</div>
				</div>
			</div>

			{# text xl and + #}
			<div class="hidden xl:block absolute left-8 2xl:bottom-60 xl:bottom-48 bottom-72 backdrop-brightness-10 ">
				<span class="text-gray-700 italic">
					<p class="text-4xl font-bold ">Envie d'évasion</p>
					<p class="text-4xl font-bold ">au travail ?</p>
					<p class="text-3xl font-medium">Il suffit de cliquer !</p>
				</span>
			</div>

			{# text lg and - #}
			<div class="absolute sm:hidden lg:block xl:hidden inset-x-1/2 w-1/2 top-15 backdrop-brightness-10">
				<span class="text-gray-700 italic">
					<p class="text-4xl font-bold">Travaillez où vous voulez ?</p> 
					<p class="absolute font-medium text-3xl left-24">C'est possible !</p>
				</span>
			</div>
			<div class="absolute sm:hidden lg:block xl:hidden inset-x-1/3 w-1/2 bottom-20 backdrop-brightness-10">
				<span class="text-gray-700 italic font-medium">
					<p class="text-3xl">Cliquez sur une ville...</p> 
				</span>
			</div>
		</div>
	</div>


	{# sidebar_filter #}
	{% include "partials/_filter_menu.html.twig" %}

{% endblock %}

			
