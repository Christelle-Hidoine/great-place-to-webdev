{% extends 'base.html.twig' %}

{% block title %}Liste des images{% endblock %}

{% block body %}
    <h1 class="text-3xl text-center my-8 font-bold text-cyan-900">Liste des images</h1>

    <a href="{{ path('app_back_image_new') }}">
        <button type="button" class="my-2 mx-auto w-24 flex justify-center focus:outline-none text-white bg-emerald-700 hover:bg-emerald-600 focus:ring-4 focus:ring-emerald-300 text-base font-medium leading-6 rounded-lg px-3 py-1.5 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:focus:ring-emerald-700">Créer</button>
    </a>
    <div class="relative overflow-x-auto mx-2">
        <table class="md:table-auto text-sm lg:text-base text-left dark:text-gray-400">
            <thead>
                <tr class="border-2 divide-x text-center">
                    <th>Id</th>
                    <th>Photo</th>
                    <th>Url</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr class="border-2 divide-x text-center">
                    <td>{{ image.id }}</td>
                    <td class ="align-middle text-start img-thumbnail"><img src="{{image.url}}"></td>
                    <td class="break-all text-left w-2/3">{{ image.url }}</td>
                    <td>
                        <a href="{{ path('app_back_image_show', {'id': image.id}) }}">
                            <button type="button" class="my-2 w-full flex justify-center focus:outline-none text-white bg-sky-700 hover:bg-sky-600 focus:ring-4 focus:ring-sky-300 text-base font-medium leading-6 rounded-lg px-3 py-1.5 dark:bg-sky-400 dark:hover:bg-sky-500 dark:focus:ring-sky-700">Détails</button>
                        </a>
                        <a href="{{ path('app_back_image_edit', {'id': image.id}) }}">
                            <button class="relative inline-flex items-center justify-center w-full p-0.5 mb-2 mr-2 overflow-hidden text-sm md:text-base font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-cyan-900 to-blue-500 group-hover:from-cyan-500 group-hover:to-blue-500 hover:text-white focus:outline-none focus:ring-cyan-200">
                                <span class="relative w-full px-5 py-1.5 transition-all ease-in duration-75 bg-white rounded-md group-hover:bg-opacity-0">Modifier</span>
                            </button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de données disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation flex justify-center text-center mt-3">
        {{ knp_pagination_render(images) }}
    </div>

{% endblock %}
