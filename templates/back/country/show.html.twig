{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
    <h1 class="text-3xl text-center my-8 font-bold text-cyan-900">{{ country.name }}</h1>

    <div class="overflow-x-auto w-5/6 md:w-2/3 lg:w-1/3 mx-auto flex flex-col">
    <small>*Supprimer les villes <span class="underline decoration-solid">avant</span> de supprimer le pays</small>
        <table class="md:table-auto text-sm lg:text-base text-left dark:text-gray-400">
            <tbody class="border-2 divide-x divide-y">
                <tr class="border-2 divide-x">
                    <th class="px-5">Id</th>
                    <td class="px-5">{{ country.id }}</td>
                </tr>
                <tr class="border-2 divide-x">
                    <th class="px-5">Nom</th>
                    <td class="px-5">{{ country.name }}</td>
                </tr>
                <tr class="border-2 divide-x">
                    <th class="px-5">Visa</th>
                    <td class="px-5">{{ country.visa }}</td>
                </tr>
                <tr class="border-2 divide-x">
                    <th class="px-5">Visa requis</th>
                    <td class="px-5">{{ country.visaIsRequired ? 'Yes' : 'No' }}</td>
                </tr>
                <tr class="border-2 divide-x">
                    <th class="px-5">Devise</th>
                    <td class="px-5">{{ country.currency }}</td>
                </tr>
                <tr class="border-2 divide-x divide-y">
                    <th class="px-5">Villes
                        <small class="text-xs italic font-light flex flex-wrap">*Supprimer les villes cliquez sur les noms</small>
                    </th>
                {% for city in country.cities %}
                    <td class="px-5 flex flex-wrap">
                        <a href="{{ path('app_back_city_show', {'id': city.id}) }}" class="focus:outline-none text-orange-700 hover:orange-600">{{ city.name }}</a>
                    </td>
                {% endfor %}
                </tr>     
            </tbody>
        </table>

        <div class="flex flex-col mt-3 text-center">

            <a href="{{ path('app_back_country_edit', {'id': country.id}) }}        ">
                <button type="button" class="w-full md:w-2/3 lg:w-1/2 my-1 rounded-md bg-cyan-900 px-3 py-1.5 text-base font-medium leading-6 text-white shadow-sm hover:bg-sky-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600 mt-6">Modifier</button>
            </a>

            <a href="{{ path('app_back_country_index') }}">
                <button type="button" class="w-full md:w-2/3 lg:w-1/2 my-1 justify-center relative overflow-hidden inline-flex items-center border-2 border-blue-400 focus:outline-none text-gray-900 rounded-md group bg-gradient-to-br from-cyan-900 to-blue-500 group-hover:from-cyan-500 group-hover:to-blue-500 hover:text-white focus:ring-cyan-200">
                    <span class="relative w-full px-3 py-1.5 transition-all ease-in duration-75 bg-white rounded-md group-hover:bg-opacity-0">Retour Ã  la liste</span>
                </button>
            </a>
            {{ include('back/country/_delete_form.html.twig') }}
        </div>

    </div>

{% endblock %}
